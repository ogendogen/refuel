@page "{vehicleId:int}"
@model Refuel.Areas.Panel.Pages.Vehicles.DeleteModel
@{
}

<h2>Usuwanie pojazdu @Model.VehicleName</h2>
<div class="row marginTop20">
    <div class="col-md-12">
        <div class="alert alert-danger text-center font-weight-bold font-24">
            Czy na pewno chcesz usunąć pojazd razem z jego całą historią? Operacja jest nieodwracalna!
        </div>
    </div>
</div>
<div class="row marginTop20">
    <div class="col-md-3">    
    </div>
    <div class="col-md-6">
        <form method="post">
            <button type="submit" class="btn btn-danger width-100-p cursor-notallowed" id="deleteButton" disabled="disabled">Usuń (10)</button>
        </form>        
    </div>
    <div class="col-md-3">
    </div>
</div>

@section ValidationScripts{
    <partial name="_DeleteCounter" />
}